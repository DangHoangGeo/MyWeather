<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/weather">
    <TextView 
        	android:id="@+id/txtDateTime"
        	android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current weather"
            android:layout_marginStart="100dp"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/edtCityName"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:hint="City's Name..."/>
        <ImageButton
            android:id="@+id/btnSearchWeatherLocal"
            android:layout_width="70dp"
            android:layout_height="wrap_content" 
            android:layout_marginStart="5dp"
            android:src="@drawable/search"/>
        <ImageButton
            android:id="@+id/btnWeeklyWeather"
            android:layout_width="70dp"
            android:layout_height="wrap_content" 
            android:layout_marginStart="5dp"
            android:src="@drawable/viewall"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Main:"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtStatus"
            android:textColor="#30093e"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tempture:"/>
        <TextView android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTempt"
            android:textSize="60dp"
            android:textColor="#ff0000"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="C"
            android:textColor="#30093e"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pressure:"/>
        <TextView android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPress"
            android:textColor="#30093e"/>
        <TextView 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="hPa"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Humidity:"/>
        <TextView android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtHumidity"
            android:textColor="#30093e"/>
        <TextView 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="%"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Wind speed:"/>
        <TextView android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtWindSpeed"
            android:textColor="#30093e"/>
        <TextView 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="m/s"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Wind direction:"/>
        <TextView android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtWindDeg"
            android:textColor="#30093e"/>
        <TextView 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="deg"/>
    </LinearLayout>
</LinearLayout>
